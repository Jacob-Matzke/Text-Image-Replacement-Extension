{
  "manifest_version": 2,
  "name": "Word Replacer",
  "version": "1.0",
  "description": "Replaces words based on user input",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
